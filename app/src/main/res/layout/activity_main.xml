<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#4A0066"
    android:paddingTop="100dp"
    tools:context="br.com.megasoares.megasoares.MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Logo ícone"
            android:src="@drawable/logo" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="Logo escrita"
            android:visibility="visible"
            android:src="@drawable/logo_copiar"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="50pt"
        android:layout_marginLeft="25pt"
        android:layout_marginRight="25pt"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnLerQRCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:drawableLeft="@drawable/ler_qr_code"
            android:textColor="#ffffff"
            android:text="Ler QR Code" />

        <Button
            android:id="@+id/btnPromocoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:drawableLeft="@drawable/ler_qr_code"
            android:text="Promoções"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnIrParaLoja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_green_dark"
            android:drawableLeft="@drawable/ir_loja"
            android:textColor="#ffffff"
            android:text="Ir para loja" />

    </LinearLayout>


</LinearLayout>
